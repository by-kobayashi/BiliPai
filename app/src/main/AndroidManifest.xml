<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.purebilibili">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:name=".app.PureApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PureBiliBili"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:configChanges="orientation|screenSize|screenLayout|keyboardHidden|mnc|colorMode|density"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:enabled="true"
            android:theme="@style/Theme.PureBiliBili"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden|mnc|colorMode|density">
        </activity>

        <!-- ðŸŒŸ Default Icon (Alias) -->
        <activity-alias
            android:name="com.android.purebilibili.MainActivityDefault"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:targetActivity="com.android.purebilibili.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- ðŸŒ¸ Minimalist Icon -->
        <activity-alias
            android:name=".MainActivityMinimalist"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_minimalist"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_minimalist"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- ðŸ§Š Glass Icon -->
        <activity-alias
            android:name=".MainActivityGlass"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_glass"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_glass"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- ðŸ± Mascot Icon -->
        <activity-alias
            android:name=".MainActivityMascot"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_mascot"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_mascot"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>



        <!-- ðŸŽ¨ Abstract Icon -->
        <activity-alias
            android:name=".MainActivityAbstract"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_abstract"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_abstract"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".feature.video.VideoActivity"
            android:exported="true"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboardHidden|uiMode"
            android:supportsPictureInPicture="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.PureBiliBili" />

        <service
            android:name=".feature.video.PlaybackService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>

    </application>

</manifest>