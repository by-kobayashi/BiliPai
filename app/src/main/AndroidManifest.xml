<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.purebilibili">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <!-- ðŸ” å­˜å‚¨æƒé™ (ä»… Android 9 åŠä»¥ä¸‹éœ€è¦ï¼Œç”¨äºŽä¿å­˜å›¾ç‰‡åˆ°ç›¸å†Œ) -->
    <uses-permission 
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".app.PureApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PureBiliBili"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:configChanges="orientation|screenSize|screenLayout|keyboardHidden|mnc|colorMode|density"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:enabled="true"
            android:theme="@style/Theme.PureBiliBili"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden|mnc|colorMode|density">
            <!-- Launcher category removed, handled by aliases -->
        </activity>

        <!-- Default Alias (3D - é»˜è®¤) -->
        <activity-alias
            android:name=".MainActivityAlias3D"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_3d"
            android:roundIcon="@mipmap/ic_launcher_3d_round"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityAliasBlue"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_blue"
            android:roundIcon="@mipmap/ic_launcher_blue_round"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>


        <activity-alias
            android:name=".MainActivityAliasRetro"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_retro"
            android:roundIcon="@mipmap/ic_launcher_retro_round"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityAliasFlat"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_flat"
            android:roundIcon="@mipmap/ic_launcher_flat_round"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityAliasNeon"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_neon"
            android:roundIcon="@mipmap/ic_launcher_neon_round"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>


        <activity
            android:name=".feature.video.VideoActivity"
            android:exported="true"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboardHidden|uiMode"
            android:supportsPictureInPicture="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.PureBiliBili" />

        <service
            android:name=".feature.video.PlaybackService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>

    </application>

</manifest>